
@{
    ViewBag.Title = "GetApiData";
}

<h2>GetApiData</h2>

<table id="table-1">
    <thead>
        <tr>
            <th>
                Employee Id
            </th>
            <th>
                EmployeeName
            </th>
            <th>
                EmployeeSalary
            </th>
            <th>
                DeptId
            </th>
        </tr>
    </thead>
</table>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
        onload = function showdata() {
            $.ajax({
                url: "http://localhost:64418/api/EmployeeApi",
                type: "Get",
                datatype: "json",
                success: function (result) {
                    alert(result);
                    $.each(result, function (i, key) {

                        $("#table-1 tr:last").after('<tr><td>' + key.EmpId + '</td><td>' + key.EmpName + '</td><td>' + key.EmpSalary + '</td></tr>');
                    });
                }
            });
        }
    </script>